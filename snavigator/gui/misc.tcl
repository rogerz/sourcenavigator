proc sn_make_delfilelist {files} {
    global sn_options sn_sep
    if {[info commands paf_db_fil] == ""} {
        return ""
    }

    set fdd_filename [sn_tmpFileName]

    set fdd_fd [open ${fdd_filename} "w+"]
